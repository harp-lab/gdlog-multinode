CompileFlags:
  Remove:
    - -forward-unknown-to-host-compiler
    - -rdc=true
    - --generate-code*
    - --expt-relaxed-constexpr
    - --expt-extended-lambda
    - --default-stream
  Add:
    - -xcuda
    - -std=c++20
    - --cuda-gpu-arch=sm_60
    - --cuda-path=/opt/cuda
    - -L/opt/cuda/lib
    - -I/opt/cuda/include
